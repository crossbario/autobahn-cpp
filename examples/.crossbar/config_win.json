{
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "public",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  },
                  {
                     "name": "user",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../web"
                  },
                  "ws": {
                     "type": "websocket"
                  }
               }
            },
            {
               "type": "rawsocket",
               "endpoint": {
                  "type": "tcp",
                  "port": 8000
               },
               "auth": {
                  "anonymous": {
                     "type": "static",
                     "role": "public"
                  },
                  "wampcra": {
                     "type": "static",
                     "users": {
                        "homer": {
                           "secret": "secret123",
                           "role": "user"
                        }
                     }
                  }
               }
            }
         ]
      }
   ]
}
